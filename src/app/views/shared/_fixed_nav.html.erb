<%# Home Page with main search bar %>
<%= link_to 'Search', root_path %>

<%# Logic that determines where the profile icon links to depending on user sign in status%>
<% if user_signed_in? and current_user.profile.blank? %>
    <%= link_to 'Profile', new_profile_path %>
<% elsif user_signed_in? %>
    <%= link_to 'Profile', profile_path(current_user.profile) %>
<% else %>
    <%= link_to 'Profile', new_user_session_path %>
<% end %>

