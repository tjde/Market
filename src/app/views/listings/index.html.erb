<p id="notice"><%= notice %></p>

<%= form_tag(listings_path, method: :get) do %>
  <%= text_field_tag(:search, params[:search], placeholder: 'Search by hobby...') %>
  <%= collection_select(:city, params[:id], City.all, :id, :name, prompt: "Location...") %>
  <%= submit_tag ("Search") %>
<% end %>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Hobby</th>
      <th>Description</th>
      <th>Location</th>
      <th>Date</th>
      <th>City</th>
      <th>Equipment</th>
      <th>Capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.profile.first_name %></td>
        <td><%= listing.hobby.name %></td>
        <td><%= listing.description %></td>
        <td><%= listing.location %></td>
        <td><%= listing.date.strftime("%B %Y") %></td>
        <td><%= listing.city.name %></td>
        <td><%= listing.equipment %></td>
        <td><%= listing.capacity %></td>
        <td><%= link_to 'Show', listing %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
