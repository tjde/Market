<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Hobby</th>
      <th>Description</th>
      <th>Location</th>
      <th>Date</th>
      <th>City</th>
      <th>Equipment</th>
      <th>Capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.profile %></td>
        <td><%= listing.hobby %></td>
        <td><%= listing.description %></td>
        <td><%= listing.location %></td>
        <td><%= listing.date %></td>
        <td><%= listing.city %></td>
        <td><%= listing.equipment %></td>
        <td><%= listing.capacity %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

