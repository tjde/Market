<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<h2>Search by Hobby</h2>
  <%= form_tag(listings_path, method: :get) do %>
    <%= text_field_tag(:search, params[:search], placeholder: 'Search by hobby...') %>
    <%= text_field_tag(:city, params[:city], placeholder: 'City e.g. Sydney') %>
    <%= submit_tag ("Search") %>
  <% end %>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Hobby</th>
      <th>Description</th>
      <th>Location</th>
      <th>Date</th>
      <th>City</th>
      <th>Equipment</th>
      <th>Capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.profile.first_name %></td>
        <td><%= listing.hobby.name %></td>
        <td><%= listing.description %></td>
        <td><%= listing.location %></td>
        <td><%= listing.date %></td>
        <td><%= listing.city.name %></td>
        <td><%= listing.equipment %></td>
        <td><%= listing.capacity %></td>
        <td><%= link_to 'Show', listing %></td>
        <% if listing.profile.user == current_user %>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
